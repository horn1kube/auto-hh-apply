# HH.ru Configuration
HH_BASE_URL=https://hh.ru
# ВНИМАНИЕ: это хэш резюме (resume_hash) из hh.ru
HH_RESUME_ID=ff2bb3eaff0c3774720039ed1f74766f434f79
HH_COOKIES=__ddg1_=...; hhuid=...; _xsrf=...; ...   # весь Cookie хедер для hh.ru

# Страница «подходящих вакансий» (GET)
HH_SEARCH_URL=https://hh.ru/search/vacancy?resume=${HH_RESUME_ID}&from=resumelist

# ОТКЛИК (реальный submit)
HH_APPLY_METHOD=POST
HH_APPLY_URL_TEMPLATE=https://hh.ru/applicant/vacancy_response/popup
HH_APPLY_BODY_TYPE=multipart   # [multipart|form|json]; нам нужен multipart
# Ключ=значение через ;  (подстановки: {vacancyId}, ${HH_RESUME_ID}, {csrf})
HH_APPLY_BODY_TEMPLATE=resume_hash=${HH_RESUME_ID};vacancy_id={vacancyId};letterRequired=false;lux=true;ignore_postponed=true
HH_APPLY_EXTRA_HEADERS=X-Requested-With:XMLHttpRequest

# Телеметрия (не обязательно)
HH_SEND_INTERACTION=false
HH_INTERACTION_URL=https://hh.ru/shards/vacancy/register_interaction

# Сеть/надёжность
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) Java21-AutoApply/1.0
HTTP_CONNECT_TIMEOUT_MS=10000
HTTP_READ_TIMEOUT_MS=20000
RATE_LIMIT_MIN_DELAY_MS=500
RATE_LIMIT_MAX_DELAY_MS=4000

# БД/логи
DB_PATH=data/app.db

# Режим
APPLY_DRY_RUN=false  # true = не отправлять, только лог 